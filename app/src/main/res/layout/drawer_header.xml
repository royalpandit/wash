<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/lin_header1"
        android:background="@drawable/background"
        android:gravity="center">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/userPicture"
        android:background="@drawable/picture_layout"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_account_circle_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Ravi Kumar Sharma"
        android:textColor="@color/white"
        android:textSize="7pt"
        android:layout_below="@+id/userPicture"
        android:layout_marginTop="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/drawableLayoutOne"
        android:layout_below="@+id/lin_header1"
        android:background="@color/bluedenim">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/pointPic"
            android:src="@drawable/ic_coin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Points"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pointPic"
            android:textSize="7pt"
            android:textColor="@color/white"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,000"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_points"
            android:textColor="@color/buttoncolor"
            android:textSize="7pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Points"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/text_points"
            android:textColor="@color/white"
            android:textSize="7pt" />
    </RelativeLayout>

</RelativeLayout>